# üåê PM Internship Platform - Environment Variables

# ============================================
# üöÄ APPLICATION CONFIGURATION
# ============================================
NODE_ENV=development
PORT=5000
API_VERSION=v1
API_BASE_URL=http://localhost:5000/api/v1

# ============================================
# üóÑÔ∏è DATABASE CONFIGURATION (MongoDB)
# ============================================
# Local MongoDB (for development)
DATABASE_URL=mongodb://localhost:27017/pm_internship_platform

# MongoDB Atlas (for production)
# DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/pm_internship_platform?retryWrites=true&w=majority

# Database Connection Options
DB_MAX_CONNECTIONS=10
DB_CONNECTION_TIMEOUT=30000

# ============================================
# üîê JWT SECRETS (Generate strong secrets!)
# ============================================
# Generate using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=your_super_secret_jwt_access_token_key_here_64_chars_minimum
JWT_REFRESH_SECRET=your_super_secret_jwt_refresh_token_key_here_64_chars_minimum
JWT_EMAIL_SECRET=your_super_secret_jwt_email_verification_key_here_64_chars
JWT_RESET_SECRET=your_super_secret_jwt_password_reset_key_here_64_chars

# JWT Expiration Times
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=30d
JWT_EMAIL_EXPIRY=24h
JWT_RESET_EXPIRY=1h

# ============================================
# üîí SECURITY CONFIGURATION
# ============================================
# Password Hashing
BCRYPT_SALT_ROUNDS=12

# Rate Limiting Whitelist (comma-separated IPs)
RATE_LIMIT_WHITELIST=127.0.0.1,::1

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# Session Configuration
SESSION_SECRET=your_super_secret_session_key_here
SESSION_EXPIRY=3600000

# ============================================
# üîë OAUTH CONFIGURATION
# ============================================
# Google OAuth 2.0
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:5000/api/v1/auth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_REDIRECT_URI=http://localhost:5000/api/v1/auth/github/callback

# ============================================
# üìß EMAIL CONFIGURATION (SMTP)
# ============================================
# Gmail SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_gmail_address@gmail.com
SMTP_PASS=your_gmail_app_password_here

# Alternative: SendGrid SMTP
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=your_sendgrid_api_key

# Email Templates
FROM_EMAIL=noreply@pminternship.gov.in
FROM_NAME=PM Internship Platform
SUPPORT_EMAIL=support@pminternship.gov.in

# ============================================
# ‚òÅÔ∏è CLOUDINARY CONFIGURATION (File Storage)
# ============================================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Upload Settings
MAX_FILE_SIZE=5242880
MAX_FILES_COUNT=5
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# ============================================
# ‚ö° REDIS CONFIGURATION (Cache & Sessions)
# ============================================
# Local Redis (for development)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis Cloud (for production)
# REDIS_URL=redis://username:password@hostname:port

# Cache Settings
CACHE_TTL=3600
SESSION_STORE_TTL=86400

# ============================================
# üîó FRONTEND URLS
# ============================================
FRONTEND_URL=http://localhost:3000
FRONTEND_LOGIN_URL=http://localhost:3000/login
FRONTEND_DASHBOARD_URL=http://localhost:3000/dashboard
FRONTEND_VERIFY_EMAIL_URL=http://localhost:3000/verify-email
FRONTEND_RESET_PASSWORD_URL=http://localhost:3000/reset-password

# Admin Frontend URLs
ADMIN_FRONTEND_URL=http://localhost:3001
ADMIN_DASHBOARD_URL=http://localhost:3001/admin/dashboard

# ============================================
# üìä LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_SIZE=10mb
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD

# File Paths
LOG_DIR=./logs
ERROR_LOG_FILE=error.log
COMBINED_LOG_FILE=combined.log
ACCESS_LOG_FILE=access.log

# ============================================
# üö¶ RATE LIMITING CONFIGURATION
# ============================================
# General API Rate Limits
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Authentication Rate Limits
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=10

# File Upload Rate Limits
UPLOAD_RATE_LIMIT_WINDOW_MS=3600000
UPLOAD_RATE_LIMIT_MAX_REQUESTS=50

# Password Reset Rate Limits
RESET_RATE_LIMIT_WINDOW_MS=3600000
RESET_RATE_LIMIT_MAX_REQUESTS=3

# ============================================
# üìà MONITORING & ANALYTICS
# ============================================
# Application Monitoring
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=1000

# Health Check
HEALTH_CHECK_INTERVAL=30000

# ============================================
# üåç EXTERNAL SERVICES
# ============================================
# Government APIs (if needed)
GOV_API_KEY=your_government_api_key_here
GOV_API_BASE_URL=https://api.gov.in

# Payment Gateway (for future features)
PAYMENT_GATEWAY_KEY=your_payment_gateway_key
PAYMENT_GATEWAY_SECRET=your_payment_gateway_secret
PAYMENT_WEBHOOK_SECRET=your_payment_webhook_secret

# Geolocation Service
GEOLOCATION_API_KEY=your_geolocation_api_key

# ============================================
# üê≥ DEPLOYMENT CONFIGURATION
# ============================================
# Docker Configuration
DOCKER_REGISTRY=your_docker_registry_url
DOCKER_IMAGE_TAG=latest

# Load Balancer
LOAD_BALANCER_HEALTH_CHECK=/health

# SSL Configuration (for production)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# ============================================
# üß™ TESTING CONFIGURATION
# ============================================
# Test Database
TEST_DATABASE_URL=mongodb://localhost:27017/pm_internship_platform_test

# Test Email Configuration
TEST_EMAIL_CAPTURE=true
TEST_SMTP_HOST=localhost
TEST_SMTP_PORT=1025

# ============================================
# üîß DEVELOPMENT TOOLS
# ============================================
# Development Settings
ENABLE_CORS=true
ENABLE_MORGAN_LOGGING=true
ENABLE_HELMET=true

# API Documentation
ENABLE_SWAGGER=true
SWAGGER_BASE_URL=http://localhost:5000

# Debug Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Hot Reload
ENABLE_HOT_RELOAD=true

# ============================================
# üìã FEATURE FLAGS
# ============================================
# Enable/Disable Features
ENABLE_OAUTH_LOGIN=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_FILE_UPLOADS=true
ENABLE_ANALYTICS_TRACKING=true
ENABLE_PAYMENT_PROCESSING=false
ENABLE_SMS_NOTIFICATIONS=false

# ============================================
# üåê INTERNATIONALIZATION
# ============================================
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi
TIMEZONE=Asia/Kolkata

# ============================================
# üì± MOBILE APP CONFIGURATION (Future)
# ============================================
MOBILE_APP_DEEP_LINK_SCHEME=pminternship
MOBILE_API_VERSION=v1
ENABLE_MOBILE_PUSH_NOTIFICATIONS=false

# Push Notification Settings
FCM_SERVER_KEY=your_fcm_server_key
FCM_SENDER_ID=your_fcm_sender_id

# ============================================
# üîê ADDITIONAL SECURITY
# ============================================
# API Keys for External Services
EXTERNAL_API_KEYS=service1:key1,service2:key2

# Encryption Keys
DATA_ENCRYPTION_KEY=your_data_encryption_key_32_chars
FILE_ENCRYPTION_KEY=your_file_encryption_key_32_chars

# Security Headers
SECURITY_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY_ENABLED=true
